@{
    ViewData["Title"] = "Files";
}
@model List<UserFile>

<style>
    .table-custom {
        border-collapse: collapse;
        width: 100%;
        margin: 20px 0;
        font-size: 1rem;
        color: #212529;
    }

        .table-custom thead th {
            background-color: #007BFF;
            color: #ffffff;
            padding: 12px 15px;
            text-align: left;
            font-weight: bold;
        }

        .table-custom tbody td {
            padding: 12px 15px;
            border-bottom: 1px solid #dddddd;
        }

        .table-custom tbody tr:hover {
            background-color: #f5f5f5;
        }

        .table-custom .btn-primary {
            color: #ffffff;
            background-color: #007bff;
            border-color: #007bff;
        }

            .table-custom .btn-primary.disabled {
                background-color: #cccccc;
                border-color: #cccccc;
            }
</style>

<h1>Files</h1>
<table class="table-custom">
    <thead>
        <tr>
            <th>Dosya Adı</th>
            <th>Oluşturma Tarihi</th>
            <th>Dosya Durumu</th>
            <th>İndir</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FileName</td>
                <td>@item.GetCreatedDate</td>
                <td>@item.FileStatus</td>
                <td>
                    <a href="@(item.FileStatus != FileStatus.Creating ? "~/files/" + item.FilePath : "#")"
                       class="btn btn-primary @(item.FileStatus == FileStatus.Creating ? "disabled" : "")">
                        Download
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
